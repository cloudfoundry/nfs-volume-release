#!/bin/bash

set -e

RUN_DIR=/var/vcap/sys/run/nfsv3driver
PIDFILE=$RUN_DIR/nfsv3driver.pid

SCRIPT=$(basename $0)
mkdir -p /var/vcap/sys/log/monit

function prepend_rfc3339_datetime() {
  perl -ne 'BEGIN { use Time::HiRes "time"; use POSIX "strftime"; STDOUT->autoflush(1) }; my $t = time; my $fsec = sprintf ".%09d", ($t-int($t))*1000000000; my $time = strftime("[%Y-%m-%dT%H:%M:%S".$fsec."Z]", localtime $t); print("$time $_")'
}

exec 1> prepend_rfc3339_datetime >> /var/vcap/sys/log/monit/${SCRIPT}.log
exec 2> prepend_rfc3339_datetime >> /var/vcap/sys/log/monit/${SCRIPT}.err.log

echo "------------ `basename $0` $* at `date` --------------" | tee /dev/stderr

case $1 in

  start)
    mkdir -p "<%= p("nfsv3driver.driver_path") %>"
    chmod 777 "<%= p("nfsv3driver.driver_path") %>"

    mkdir -p "<%= p("nfsv3driver.cell_mount_path") %>"
    chown vcap:vcap "<%= p("nfsv3driver.cell_mount_path") %>"

    # Allowed number of open file descriptors
    ulimit -n 100000

    exec chpst /var/vcap/jobs/nfsv3driver/bin/start.sh

    ;;

  stop)
    if [ -f $PIDFILE ]; then
      kill -9 `cat $PIDFILE` || true
      rm -f $PIDFILE
    fi
    ;;

  *)
    echo "Usage: nfsv3driver_ctl {start|stop}"

    ;;

esac
